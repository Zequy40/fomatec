---
export interface Props {
	title: string;
	body: string;
	cabezado: string;
}

const { cabezado, title, body } = Astro.props;
---

<li class="link-card">
	<h1>
		{cabezado}
	</h1>
		<h2>
			{title}
			
		</h2>
		<p>
			{body}
		</p>
	
</li>
<style>
	.link-card {
		
		list-style: none;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		padding: 1rem;
		gap: 2rem;
		color: var(--white-foma);
		
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	h1{
		font-size: 4rem;
	}
	h2 {
		margin: 0;
		font-size: 1.9rem;
		font-weight: bold;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	
</style>
